generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int             @id @default(autoincrement())
  name              String
  level             Int             @default(1)
  lastTurnedCompost BigInt          @default(0)
  energy            Int             @default(100)
  fruit             Int             @default(0)
  gold              Int             @default(0)
  fungi             Fungus[]
  gardenPlots       GardenPlot[]
  items             Item[]
  ForageResults     ForageResults[]
}

model Item {
  id        Int     @id @default(autoincrement())
  itemId    Int
  userId    Int
  isKeyItem Boolean @default(false)
  user      User    @relation(fields: [userId], references: [id])
}

model GardenPlot {
  id     Int      @id @default(autoincrement())
  userId Int
  level  Int      @default(1)
  fungi  Fungus[]
  user   User     @relation(fields: [userId], references: [id])
}

model Fungus {
  id                 Int         @id @default(autoincrement())
  fungusId           Int
  userId             Int
  gardenPlotId       Int?
  spaceIndex         Int?
  growthMediumItemId Int?
  lastHarvested      BigInt      @default(0)
  gardenPlot         GardenPlot? @relation(fields: [gardenPlotId], references: [id])
  user               User        @relation(fields: [userId], references: [id])
}

model ForageResults {
  id        Int    @id @default(autoincrement())
  userId    Int
  user      User   @relation(fields: [userId], references: [id])
  itemIds   String
  fungusIds String
}
